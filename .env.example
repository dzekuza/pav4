# Shopify Access Token
SHOPIFY_ACCESS_TOKEN="your-shopify-access-token-here"

# Search API
SEARCH_API="https://serapi.com/api/v1/search"

# Business Configuration
DEFAULT_COMMISSION_RATE=10
